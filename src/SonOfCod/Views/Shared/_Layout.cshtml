<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar">
        <div class="col-sm-6"><h3>@Html.ActionLink("Son of Cod","Index", "Home")</h3></div>
        <div class="pull-right">
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <input type="submit" class="btn btn-warning" value="Log out" />
            }
        </div>
        <div class="pull-right">
            <h3>@Html.ActionLink("Marketing Information", "Index", "Marketing") | @Html.ActionLink("News Letter", "NewsLetter", "Home") | @User.Identity.Name</h3>
            @if (User.Identity.IsAuthenticated)
            {

            }
            else
            {
                <h3>@Html.ActionLink("Register/Log in", "Index", "Account")</h3>

            }

        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
