@{
    ViewData["Title"] = "Son of Cod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model SonOfCod.Models.Subscriber

<h2>Newsletter</h2>
<hr />
<p>Our newsletter provides you with great information regarding events, fun facts about seafood, and recipe ideas.</p>
<h3>Sign up to join the mailing list</h3>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })



    <br />
    <input type="submit" class="btn btn-primary" value="Subscribe" />
}

@if (User.Identity.IsAuthenticated)
{
    <h4>@Html.ActionLink("View a list of all subscribers", "List")</h4>
}